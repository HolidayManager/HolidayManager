{% extends 'base.html.twig' %}
{% include 'navbar.html.twig' %}
{% block title %}User Info{% endblock %}

{% block body %}
    <div>
        <table>
            <tr><th>Firstname</th><td>{{ user.getFirstname() }}</td><tr>
            <tr><th>Lastname</th><td>{{ user.getLastname() }}</td></tr>
            <tr><th>Email</th><td>{{ user.getEmail() }}</td></tr>
            <tr><th>Date of Birth</th><td>{{ user.getBirthDate() }}</td></tr>
            <tr><th>Department</th><td>{{ user.getDepartment }}</td></tr>
            <tr><th>Position</th><td>{{ user.getRoles()[0] }}</td></tr>
            <tr><th>Start day of work</th><td>{{ user.getReferenceYear() }}</td></tr>
            <tr><th>Holidays Left</th><td>{{ user.getHolidayLeft() }}</td></tr>
        </table>
    </div>
    <div>
        <a href="/user/update/{{ user.getId() }}"><i class="fas fa-pencil-alt"></i></a>
        <a href="/user/delete/{{ user.getId() }}"><i class="far fa-times-circle"></i></a>
    </div>
{% endblock %}