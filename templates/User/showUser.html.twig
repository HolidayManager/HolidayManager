{% include 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/dashboard.css">
{% endblock %}

{% block body %}
    {% include 'Dashboard/navbar.html.twig' %}
    <div>
        <table class= "table table-striped">
            <tr><th>Firstname</th><td>{{ user.getFirstname() }}</td><tr>
            <tr><th>Lastname</th><td>{{ user.getLastname() }}</td></tr>
            <tr><th>Email</th><td>{{ user.getEmail() }}</td></tr>
            <tr><th>Date of Birth</th><td>{{ user.getBirthDate()| date }}</td></tr>
            <tr><th>Department</th><td>{{ user.getDepartment().getLabel() }}</td></tr>
            <tr><th>Position</th><td>{{ user.getRoles()[0] }}</td></tr>
            <tr><th>Start day of work</th><td>{{ user.getReferenceYear() | date }}</td></tr>
            <tr><th>Holidays Left</th><td>{{ user.getHolidayLeft() }}</td></tr>
        </table>
    </div>
    <div>
        <a href="/user/update/{{ user.getId() }}"><span>Update<i class="fas fa-pencil-alt"></i></a>
        <a href="/user/delete/{{ user.getId() }}">Delete<i class="far fa-times-circle"></i></a>
    </div>
{% endblock %}
