{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="/css/homepage.css">
{% endblock %}

    {% block body %}

    <div class="backgroundimage">
      <div class="bg" id="homepage_bg">

    {% include 'homepage_navbar.html.twig'%}

    <div class="container" id="carousel-container">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/images/hpblur1.png" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                <h5 class="carouselStyle">Easy to manage all users!</h5>
              </div>
             </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/hpblur2.png" alt="Second slide">
              <div class="carousel-caption d-none d-md-block">
                <h5 class="carouselStyle">Easy to handle holiday requests!</h5>
              </div>
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/hpblur3.png" alt="Third slide">
              <div class="carousel-caption d-none d-md-block">
                <h5 class="carouselStyle">Easy to check other user's holidays!</h5>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

    </div>

      </div>
    </div>

    {% endblock %}
