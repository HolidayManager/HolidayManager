{% include 'base.html.twig' %}


{% block stylesheets %}
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}
<div class="bg">
<div class="container">
    <form method="post" class="form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h5 class="h3 mb-3 font-weight-normal" id="login">Log In</h5>
        <div class="col">
        <label for="inputUsername" class="sr-only">Username</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="forgotpassword"><a class="forgotpassword" href="/password/reset">Forgot Password?</a></div>
        <button class="btn btn-lg btn-primary" type="submit" id="signinbutton">
            Sign in
        </button>
    </form>
</div>
</div>

{% endblock %}
